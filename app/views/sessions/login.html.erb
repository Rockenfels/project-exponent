<div class="">
    <h2>Admin Login - Please login below</h2>
    <%= form_for @admin do |f| %>
        <div class="form-group">
            <%= f.label :email, "Email: " %>
            <%= f.text_field :email, type: => "email", class: => "form-control", placeholder: => "Email" %>
        </div>
        <div class="form-group">
            <%= f.label :password, "Password: " %>
            <%= f.password_field :password, type: => "password", class: => "form-control", placeholder: => "Password" %>
        </div>
            <%= f.submit, class: => "btn btn-primary" %>
    <% end %>
</div>